<!DOCTYPE html>
<html lang="en">

<head>
	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">
	
	<title>A Blog Project By OhhhDEV</title>
	
	<link href="../css/styles.css" rel="stylesheet" type="text/css">

</head>

<body>
	<div class="main-wrapper">
		
		<!-- Navigation -->
		<div class="nav-bar">
			<div class="nav-container">
				<div class="brand">
					OhhhDEV
				</div>
				<div id="hamburger" class="hamburglar is-closed toggle">
					
					<div class="burger-icon">
						<div class="burger-container">
							<span class="burger-bun-top"></span>
							<span class="burger-filling"></span>
							<span class="burger-bun-bot"></span>
						</div>
					</div>
					
					<!-- svg ring containter -->
					<div class="burger-ring">
						<svg class="svg-ring">
							<path class="path" fill="none" stroke="#fff" stroke-miterlimit="10" stroke-width="4" d="M 34 2 C 16.3 2 2 16.3 2 34 s 14.3 32 32 32 s 32 -14.3 32 -32 S 51.7 2 34 2" />
						</svg>
					</div>
					
					<!-- the masked path that animates the fill to the ring -->
					<svg width="0" height="0">
						<mask id="mask">
							<path xmlns="http://www.w3.org/2000/svg" fill="none" stroke="#ff0000" stroke-miterlimit="10" stroke-width="4" d="M 34 2 c 11.6 0 21.8 6.2 27.4 15.5 c 2.9 4.8 5 16.5 -9.4 16.5 h -4" />
						</mask>
					</svg>
					<div class="path-burger">
						<div class="animate-path">
							<div class="path-rotation"></div>
						</div>
					</div>
				
				</div>
				
				<nav id="nav" class="nav">
					<ul id="ul-menu" class="menu">
						
						<li class="item">
							<a class="nav-link" href="/" title="Til forsiden">Home</a>
						</li>
						
						<li class="item">
							<a class="nav-link" href="/posts/new" title="Projekter og andre sager">New Post</a>
						</li>
						@if(!auth)
						<li class="item">
							<a class="nav-link" href="/auth/login" title="Posts">Login</a>
						</li>
						
						<li class="item">
							<a class="nav-link" href="/auth/register" title="Kontakt mig">Register</a>
						</li>
						@else
						<li class="item">
							<a class="nav-link" href="/auth/logout" title="Kontakt mig">Logout</a>
						</li>
						@endif
					</ul>
				</nav>
			</div>
		</div>
		
		@!section('content')
		
		<!-- Footer -->
		<footer class="footer">
			<div class="social-links">
				<a href="#">
					<img class="logo" src="img" alt="F.B Logo">
				</a>
				<a href="mailto:email">
					<img class="logo" src="img" alt="EMAIL">
				</a>
			</div>
			
			<div class="copyright">Copyright &copy; 2020 - OhhhDEV - All Rights Reserved</div>
		</footer>
	
	</div>

</body>

</html>